%h1 Listing links

%table
  %thead
    %tr
      %th Url
      %th Tags
      %th Description
      %th
      %th
      %th

  %tbody
    - @links.each do |link|
      %tr
        %td= link.url
        %td
          - link.tags.each do |tag|
            = link_to "##{tag}", links_by_tag_path(tag)
        %td= link.description
        %td= link_to 'Show', link
        %td= link_to 'Edit', edit_link_path(link)
        %td= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Link', new_link_path
